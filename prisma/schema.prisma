generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int       @id() @default(autoincrement())
  key       String    @unique()
  name      String
  image     String?
  createdAt DateTime  @default(now())
  product   Product[]
}

model Product {
  id         Int      @id(map: "product_pkey")
  categoryId Int
  color      String   @db.VarChar(50)
  usage      String   @db.VarChar(50)
  name       String   @db.VarChar(64)
  thumbnail  String
  createdAt  DateTime @default(now())
  price      Int      @default(10)

  contents       ProductDetail[]
  variantValue   VariantValue[]
  productOption  ProductOption[]
  productVariant ProductVariant[]
  category       Category         @relation(fields: [categoryId], references: [id])
}

model ProductOption {
  id           Int            @id() @default(autoincrement())
  productId    Int
  optionId     Int
  product      Product        @relation(fields: [productId], references: [id])
  option       Option         @relation(fields: [optionId], references: [id])
  variantValue VariantValue[]

  @@unique([productId, optionId])
}

model ProductVariant {
  id        Int      @id() @default(autoincrement())
  productId Int
  variantId Int
  sku       String
  images    String[]

  product Product      @relation(fields: [productId], references: [id])
  variant VariantValue @relation(fields: [variantId], references: [id])

  @@unique([variantId])
}

model VariantValue {
  id            Int @id() @default(autoincrement())
  productId     Int
  optionId      Int
  optionValueId Int

  product        Product         @relation(fields: [productId], references: [id])
  productOption  ProductOption   @relation(fields: [productId, optionId], references: [productId, optionId])
  optionValue    OptionValue     @relation(fields: [optionId, optionValueId], references: [optionId, id])
  productVariant ProductVariant?

  @@unique([productId, optionId, id])
}

model Option {
  id            Int             @id() @default(autoincrement())
  name          String
  productOption ProductOption[]
  optionValue   OptionValue[]

  @@unique([name])
}

model OptionValue {
  id       Int    @id() @default(autoincrement())
  optionId Int
  name     String

  option       Option         @relation(fields: [optionId], references: [id])
  variantValue VariantValue[]

  @@unique([id, optionId])
}

model ProductDetail {
  id        Int      @id() @default(autoincrement())
  productId Int
  key       String
  name      String
  content   String   @db.Text
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
}
