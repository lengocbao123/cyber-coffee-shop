generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int       @id() @default(autoincrement())
  key       String    @unique()
  name      String
  image     String?
  createdAt DateTime  @default(now())
  product   Product[]
}

model Product {
  id         Int      @id(map: "product_pkey")
  categoryId Int
  color      String   @db.VarChar(50)
  usage      String   @db.VarChar(50)
  name       String   @db.VarChar(64)
  thumbnail  String
  createdAt  DateTime @default(now())
  price      Int      @default(10)

  contents       ProductDetail[]
  variantValue   VariantValue[]
  options  ProductOption[]
  productVariant ProductVariant[]
  category       Category         @relation(fields: [categoryId], references: [id])
}

model Option {
  id            Int             @id() @default(autoincrement())
  name          String
  productOption ProductOption[]
  optionValue   OptionValue[]
}

model OptionValue {
  id       Int    @id() @default(autoincrement())
  optionId Int
  name     String

  option       Option         @relation(fields: [optionId], references: [id])
  variantValue VariantValue[]

  @@unique([id, optionId])
}

model ProductOption {
  id        Int @id() @default(autoincrement())
  productId Int
  optionId  Int

  product      Product        @relation(fields: [productId], references: [id])
  option       Option         @relation(fields: [optionId], references: [id])
  variantValue VariantValue[]

  @@unique([productId, optionId])
}

model ProductVariant {
  id        Int    @id() @default(autoincrement())
  productId Int
  sku       String @default(uuid())
  images    String
  price     Int
  quantity  Int

  product      Product        @relation(fields: [productId], references: [id])
  variantValues VariantValue[]
}

model VariantValue {
  id        Int @id() @default(autoincrement())
  productId Int
  variantId Int
  optionId  Int
  valueId   Int

  product Product        @relation(fields: [productId], references: [id])
  option  ProductOption  @relation(fields: [productId, optionId], references: [productId, optionId])
  value   OptionValue    @relation(fields: [optionId, valueId], references: [optionId, id])
  variant ProductVariant @relation(fields: [variantId], references: [id])

  @@unique([productId, optionId, variantId])
}

model ProductDetail {
  id        Int      @id() @default(autoincrement())
  productId Int
  key       String
  name      String
  content   String   @db.Text
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
}
